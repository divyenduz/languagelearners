    "test": "jest",
    "tunnel": "lt --port 3000",
    "build": "tsc",
    "watch": "tsc -w",
    "set-webhook": "ts-node ./scripts/set-webhook.ts",
    "set-webhook-production": "ts-node ./scripts/set-webhook.ts --production",
    "get-bot": "ts-node ./scripts/get-bot.ts",
    "get-bot-production": "ts-node ./scripts/get-bot.ts --production",
    "deploy": "prisma deploy && sls deploy && yarn set-webhook",
    "deploy-production":
      "prisma deploy -e .env.production && NODE_ENV=production sls deploy --stage production"
